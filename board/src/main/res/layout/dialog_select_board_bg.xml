<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="601px"
	android:layout_height="wrap_content"
	android:background="#fff"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="300px"
		android:orientation="horizontal">

		<View
			android:id="@+id/bgDefault"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/board_bg_default"/>

		<View
			android:layout_width="1px"
			android:layout_height="match_parent"
			android:background="#dcdddf"/>

		<View
			android:id="@+id/bgLine"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/board_bg_line"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#dcdddf"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="200px"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/bgNone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/select_board_bg_btn"
			android:gravity="center"
			android:text="无背景"
			android:textColor="#000"
			android:textSize="26px"/>

	</LinearLayout>

</LinearLayout>
