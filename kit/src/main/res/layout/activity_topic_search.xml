<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f4f4f4">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<View
			android:layout_width="match_parent"
			android:layout_height="38px"
			android:background="#151517"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#151517">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/phaseCon"
					android:layout_width="wrap_content"
					android:layout_height="58px"
					android:layout_marginLeft="45px"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/phaseText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="阶段"
						android:textColor="#fff"
						android:textSize="23px"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10px"
						android:src="@drawable/icon_drop"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/subjectCon"
					android:layout_width="wrap_content"
					android:layout_height="58px"
					android:layout_marginLeft="45px"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/subjectText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="全部"
						android:textColor="#fff"
						android:textSize="23px"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10px"
						android:src="@drawable/icon_drop"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/knowledgeCon"
					android:layout_width="wrap_content"
					android:layout_height="58px"
					android:layout_marginLeft="45px"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="知识点"
						android:textColor="#fff"
						android:textSize="23px"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10px"
						android:src="@drawable/icon_drop"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/styleCon"
					android:layout_width="wrap_content"
					android:layout_height="58px"
					android:layout_marginLeft="45px"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="题型"
						android:textColor="#fff"
						android:textSize="23px"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10px"
						android:src="@drawable/icon_drop"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/difficultyCon"
					android:layout_width="wrap_content"
					android:layout_height="58px"
					android:layout_marginLeft="45px"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="难度"
						android:textColor="#fff"
						android:textSize="23px"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10px"
						android:src="@drawable/icon_drop"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="45px"
					android:background="@drawable/search_bg"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<EditText
						android:id="@+id/keyword"
						android:layout_width="500px"
						android:layout_height="56px"
						android:background="@null"
						android:hint="搜索关键字"
						android:imeOptions="actionSearch"
						android:inputType="textPersonName"
						android:paddingLeft="24px"
						android:textColor="#fff"
						android:textColorHint="#474b4c"
						android:textSize="23px"/>

					<ImageView
						android:id="@+id/search"
						android:layout_width="84px"
						android:layout_height="match_parent"
						android:scaleType="center"
						android:src="@drawable/img_search"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/pageNum"
					android:layout_width="wrap_content"
					android:layout_height="58px"
					android:layout_marginRight="30px"
					android:gravity="center"
					android:text="1 / 33"
					android:textColor="#fff"
					android:textSize="24px"/>

				<TextView
					android:id="@+id/result"
					android:layout_width="154px"
					android:layout_height="58px"
					android:layout_marginRight="30px"
					android:background="@drawable/btn_bg"
					android:gravity="center"
					android:text="确定"
					android:textColor="#fff"
					android:textSize="24px"/>

			</LinearLayout>

		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="5px"
			android:background="#151517"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="0px"
					android:layout_height="match_parent"
					android:layout_weight="1216"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="56px"
						android:background="#fff">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:text="题目"
							android:textColor="#000"
							android:textSize="24px"/>

					</RelativeLayout>

					<View
						android:layout_width="match_parent"
						android:layout_height="1px"
						android:background="#caced0"/>

					<ScrollView
						android:id="@+id/problemScroll"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:overScrollMode="never"
						android:scrollbars="none">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">

							<ImageView
								android:id="@+id/problemImg"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:background="#fff"/>

						</LinearLayout>
					</ScrollView>

				</LinearLayout>

				<View
					android:layout_width="1px"
					android:layout_height="match_parent"
					android:layout_marginTop="56px"
					android:background="#cacecf"/>

				<LinearLayout
					android:layout_width="0px"
					android:layout_height="match_parent"
					android:layout_weight="1018"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="56px"
						android:background="#fff">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:text="答案"
							android:textColor="#000"
							android:textSize="24px"/>

					</RelativeLayout>

					<View
						android:layout_width="match_parent"
						android:layout_height="1px"
						android:background="#caced0"/>

					<ScrollView
						android:id="@+id/parseScroll"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:overScrollMode="never"
						android:scrollbars="none">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">

							<ImageView
								android:id="@+id/parseImg"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:background="#fff"/>

						</LinearLayout>
					</ScrollView>

				</LinearLayout>

			</LinearLayout>

			<ImageView
				android:id="@+id/prev"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="30px"
				android:alpha="0.5"
				android:paddingLeft="20px"
				android:paddingRight="20px"
				android:src="@drawable/img_prev"/>

			<ImageView
				android:id="@+id/next"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="30px"
				android:alpha="0.5"
				android:paddingLeft="20px"
				android:paddingRight="20px"
				android:src="@drawable/img_next"/>

			<TextView
				android:id="@+id/number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="333"
				android:textColor="#0a9"
				android:textSize="120px"
				android:visibility="gone"/>

			<LinearLayout
				android:layout_width="1000px"
				android:layout_height="75px"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="50px"
				android:background="#8888"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<SeekBar
					android:id="@+id/progress"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:max="1000"
					android:maxHeight="6px"
					android:progress="50"
					android:progressDrawable="@drawable/topic_progress_bg"
					android:secondaryProgress="0"
					android:thumb="@drawable/img_topic_thumb"/>

			</LinearLayout>

		</RelativeLayout>

	</LinearLayout>

	<RelativeLayout
		android:id="@+id/knowledgePage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#5555"
		android:visibility="gone">

		<RelativeLayout
			android:layout_width="1160px"
			android:layout_height="1100px"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:background="#fff"
			android:clickable="true">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/recyclerView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:overScrollMode="never"/>
		</RelativeLayout>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/stylePage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#5555"
		android:visibility="gone">

		<RelativeLayout
			android:layout_width="600px"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="#fff"
			android:clickable="true">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/recyclerViewStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:overScrollMode="never"
				android:paddingLeft="15px"
				android:paddingRight="15px"/>
		</RelativeLayout>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/difficultyPage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#5555"
		android:visibility="gone">

		<RelativeLayout
			android:layout_width="600px"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="#fff"
			android:clickable="true">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/recyclerViewDifficulty"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:overScrollMode="never"
				android:paddingLeft="15px"
				android:paddingRight="15px"/>
		</RelativeLayout>

	</RelativeLayout>

</RelativeLayout>
